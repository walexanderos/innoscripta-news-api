                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "description": "User's preferences",
                                            "type": "object",
                                            "example": {
                                                "user_id": 1,
                                                "sources": [
                                                    "NewsAPI",
                                                    "BBC"
                                                ],
                                                "categories": [
                                                    "Technology",
                                                    "Health"
                                                ],
                                                "authors": [
